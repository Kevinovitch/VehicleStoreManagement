{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recherche</h5>
                </div>
                <div class="card-body">
                    <form id="searchForm" class="mb-3">
                        <div class="mb-3">
                            <input type="text" id="searchQuery" class="form-control" placeholder="Rechercher...">
                        </div>
                        <div class="mb-3">
                            <select id="proprietaireFilter" class="form-control">
                                <option value="">Tous les propriétaires</option>
                                {% for proprietaire in proprietaires %}
                                    <option value="{{ proprietaire.id }}">{{ proprietaire.nom }} {{ proprietaire.prenom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Statistiques</h5>
                </div>
                <div class="card-body">
                    <canvas id="vehiclesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Liste des Véhicules</h5>
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    Trier par
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item sort-option" data-sort="marque">Marque</a></li>
                    <li><a class="dropdown-item sort-option" data-sort="modele">Modèle</a></li>
                    <li><a class="dropdown-item sort-option" data-sort="dateImmatriculation">Date d'immatriculation</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" id="vehiclesTable">
                    <thead>
                    <tr>
                        <th>Marque</th>
                        <th>Modèle</th>
                        <th>Immatriculation</th>
                        <th>Date</th>
                        <th>Propriétaire</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# Rempli dynamiquement par JavaScript #}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}